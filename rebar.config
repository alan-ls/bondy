{minimum_otp_vsn, "R23.3.1"}.

{erl_opts, [
    % warn_export_all,
    % warn_missing_spec,
    debug_info,
    ewarn_export_all,
    strict_validation,
    warn_bif_clash,
    warn_deprecated_function,
    warn_export_vars,
    warn_exported_vars,
    warn_format,
    warn_obsolete_guard,
    warn_shadow_vars,
    warn_untyped_record,
    warn_unused_function,
    warn_unused_import,
    warn_unused_record,
    warn_unused_vars,
    warnings_as_errors,
    {parse_transform, lager_transform}
 ]}.

{deps, [
    %% WAMP message encoding/decoding
    {wamp,
        {git, "https://gitlab.com/leapsight/wamp.git", {tag, "0.8.2"}}
    },
    %% Currently used to implement a load regulated pool of workers
    sidejob,
    %% The embedded database using Partisan, Plumtree and dvvsets.
    %% Stores data in ets and leveldb, also performs active anti-entropy
    %% exchanges to keep all nodes in sync.
    {plum_db,
        {git, "https://gitlab.com/leapsight/plum_db.git", {branch, "master"}}
    },
    %% A hashed set of ets tables and an implementation of a queue that we
    %% currently used for bondy_rpc_promise.
    {tuplespace,
        {git, "https://gitlab.com/leapsight/tuplespace.git", {branch, "master"}}
    },
    {jobs, "0.10.0"},
    %% A partial implementation of an Adaptive Radix Trie.
    %% We use it to store the procedure and topic tries.
    {art,
        {git, "https://gitlab.com/leapsight/art.git", {branch, "develop"}}
    },
    %% Debugging tools
    {redbug, "2.0.7"},
    {observer_cli, "1.6.1"},
    %% Used to implement WebSockets, API Gateway, HTTP Admin API
    %% and /metrics endpoint
    {cowboy, "2.8.0"},
    %% Used by API Gateway to implement forward action to
    %% downstream HTTP services
    hackney,
    %% CRYPTO
    {erlang_term, "2.0.1"},
    {jose, "~>1.11.1"},
    pbkdf2,
    {stringprep, "1.0.25"},
    {enacl, "1.1.1"},
    %% Required by lager and some parse transform utils in Bondy
    parse_trans,
    %% The logging library
    {lager, "~>3.9.1"},
    %% Exposes metrics to Promethues
    {prometheus, "4.8.0"},
    {prometheus_cowboy, "0.1.8"},
    %% Telemetry and distributed tracing library
    {opencensus,
        {git, "https://github.com/census-instrumentation/opencensus-erlang.git",{branch, "master"}}
    },
    %% Gathers erlang metrics for to prometheus
    {opencensus_erlang_prometheus, "0.3.2"},
    %% A mustache-like library used by API Gateway and Broker Bridge
    %% specifications
    {mops,
        {git, "https://gitlab.com/leapsight/mops.git", {branch, "master"}}
    },
    %% Leapsight utility library implementing relational algebra
    {leap,
        {git, "https://gitlab.com/leapsight/leap.git", {branch, "master"}}
    },
    %% Leapsight utility library
    {utils,
        {git, "https://gitlab.com/leapsight/utils.git", {branch, "develop"}}
    },
    %% UUID generation
    {uuid, "2.0.1", {pkg, uuid_erl}}
]}.



%% =============================================================================
%% RELX
%% =============================================================================



{relx, [
    {release, {bondy, "0.9.0"},[
        %% Erlang
        sasl,
        crypto,
        inets,
        tools,
        runtime_tools,
        os_mon,
        %% Third-parties
        cowboy,
        erlang_term,
        hackney,
        jose,
        jsone,
        lager,
        msgpack,
        opencensus,
        opencensus_erlang_prometheus,
        pbkdf2,
        enacl,
        stringprep,
        prometheus,
        prometheus_cowboy,
        redbug,
        observer_cli,
        sidejob,
        jobs,
        uuid,
        parse_trans,
        %% Ours
        mops,
        plum_db,
        leap,
        tuplespace,
        art,
        utils,
        wamp,
        bondy,
        bondy_broker_bridge
    ]},
    {dev_mode, false},
    {include_src, false},
    {include_erts, true},
    {overlay, [
        {template,
            "priv/hooks/pre_start",
            "bin/hooks/pre_start"
        },
        %% copy scripts required by pre_start hook
        {copy,
            "priv/tools/validate-config",
            "bin/validate-config"
        },
        {copy,
            "priv/tools/replace-env-vars",
            "bin/replace-env-vars"
        },
        % TBD
        {template,
            "files/bondy-admin",
            "bin/bondy-admin"
        },
        {template,
            "files/bondy-repair.escript",
            "bin/bondy-repair.escript"
        }
    ]},

    {overlay_vars, "config/prod/vars.generated"},
    {extended_start_script, true},
    {extended_start_script_hooks, [
        {pre_start, [
            {custom, "hooks/pre_start"},
            {custom, "hooks/pre_start_cuttlefish"}
        ]}
    ]}
]}.

{pre_hooks, [
    %% We generate the vars.generated file used in overlay_vars
    %% This allows to configure which vars to use e.g. debian, rpm, etc.
    {release, "make genvars"}
]}.


